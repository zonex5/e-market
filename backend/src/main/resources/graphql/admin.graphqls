type AdmCategory {
    id: ID
    active: Boolean
    translations: [AdmCategoryTranslation]
}

type AdmCategoryTranslation {
    id: Int
    lang: String,
    title: String
}

input AdmCategoryInput {
    id: ID
    title: String
    active: Boolean
}

extend type Query {
    admAllCategories: [AdmCategory]
}

extend type Mutation {
    saveCategory(category: AdmCategoryInput): Boolean
}